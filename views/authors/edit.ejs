<h2 class="page-header">Edit Author</h2>
<form action="/authors/<%= author.id %>?_method=PUT" method="POST">
  <%- include('_form_fields') %>
  <div class="form-row form-row-end btn-row">
    <!-- using an anchor tag rather than a button because buttons are used to
  interact and anchors link things with forms and links -->
    <a class="btn btn-danger" href="/authors/<%= author.id %>">Cancel</a>
    <button class="btn btn-primary" type="submit">Update</button>
  </div>
</form>
